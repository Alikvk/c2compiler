module va_test;

import stdio local;
import stdarg local;

func void log(const char* fmt, ...) {
    char[80] buffer;
    va_list args;
    va_start(args, fmt);
    vsprintf(buffer, fmt, args);
    va_end(args);
    printf("%s\n", buffer);
}

public func int32 main() {
    log("Hello world");
    log("The number %d", 10);
    log("main is %p", main);

    return 0;
}


